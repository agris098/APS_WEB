<form id="ClassifieldForm">
    <div class="form-group s_price">
        <label for="S_price">Price</label>
        <div class="input-group">
            <span class="input-group-addon">$</span>
            <input name="S_price" type="number" class="form-control" id="S_price" placeholder="0">
        </div>
    </div>
    <div class="form-group s_description">
        <label for="S_description">Description</label>
        <textarea name="S_description" class="form-control" rows="5" id="S_description"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>